@model Drink
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" style="width:100%;height:112.9px;" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price₺</h3>
            <h3>@Model.Name</h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-drinkId="@Model.DrinkId">
                    Sepete Ekle
                </a>
            </p>
        </div>
    </div>
</div>