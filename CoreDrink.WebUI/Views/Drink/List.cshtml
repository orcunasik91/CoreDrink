@model DrinkListViewModel
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "İçecekler";
}
<div>
    <h3>İçecek Listesi</h3>
</div>

@foreach (var drink in Model.Drinks)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@drink.ImageThumbnailUrl" alt="" style="width:100%;height:112.9px;"/>
            <div class="caption">
                <h3 class="pull-right">@drink.Price₺</h3>
                <h3>@drink.Name</h3>
                <p>@drink.ShortDescription</p>
            </div>
        </div>
    </div>
}